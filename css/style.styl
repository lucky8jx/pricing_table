/**************************************
*	main style
************************************/
//========================================
//	include mixins
//======================================
@import './mixins/style'

//================================
// Basic style
//====================
body
	width 100%
	margin 0 auto
	padding 0
	font-family Arial, Sans-serif

//==================================
// style of header
//=================================
.l-hd
	background-color rgb(240, 240, 240)
	> div
		padding 10px
.logo
	text-align center
	> a
		color rgb(20, 20, 20)
		text-decoration none
		transition(all 300ms ease-in 0s)
		&:hover
			color rgb(200, 20, 100)

//======================================
// style of main
//====================================
.l-mn
	background-color rgb(235, 235, 235)
	> div
		padding 10px
.container
	width 50%
	margin 0 auto
.pri-table
	position relative
	margin 0
	padding 0
	list-style none
	&:after
	&:before
		content " "
		display table
	&:after
		clear both

.item
	position relative
	float left
	width 20%
	margin 0
	padding 0
	text-align center
	border 1px solid rgb(211, 211, 211)
	background-color rgb(253, 252, 250)
	transition(all 200ms ease-in 0s)
	box-sizing(border-box)
	&:hover
		z-index 2
		width 24%
		margin -2%
		border-radius(5px)
		box-shadow(0 0 8px 0 rgb(40, 40, 40))
		transition(all 200ms ease-in 0s)
	> h1
		display inline-block
		width 100%
		margin 0
		padding 20px 0
		font-size 22px
		color rgb(68, 68, 68);
		border-bottom 1px solid rgb(239, 239, 237)
	> .btn
		margin 0
		padding 0
		border-top 1px solid rgb(239, 239, 237)
		background-color rgb(250, 249, 247)
		> a
			display inline-block
			margin 12px 0
			padding 12px 32px
			font-size 14px
			font-style italic
			color rgb(37, 37, 37)
			text-decoration none
			border 1px solid rgba(200, 200, 200, 0.5)
			border-radius(30px)
			vertical(rgb(240,250,170), rgb(230, 220, 125), rgb(220,190,80))
			transition(all 200ms ease-in 0s)
			&:hover
				vertical(rgb(245,255,175), rgb(235, 225, 130), rgb(225,195,85))

.item-price
	width 100%
	margin 0
	padding 10px 0
	font-size 14px
	font-style italic
	color rgb(136, 136, 136)
	border-bottom 1px solid rgb(239, 239, 237)
	background-color rgb(251, 250, 248)

.item-desc
	margin 0
	padding 20px;
	font-size 12px
	color rgb(68, 68, 68)

.item-spec
	width 80%
	margin 0 auto 30px
	padding 0
	font-size 12px
	color rgb(133, 132, 131)
	list-style none
	> li
		margin 0
		padding 10px 0
		border-bottom 1px dashed rgb(222, 221, 220)
		&:first-child
			border-top 1px dashed rgb(222, 221, 220)



//=================================
// style of footer
//========================
.l-ft
	background-color rgb(230, 230, 230)
	> div
		padding 10px
		> p
			text-align center
